<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlgFileItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/dlgFileItemIcon"
        android:layout_width="24sp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@null"
        android:paddingRight="5dp"
        android:paddingLeft="3dp" >
    </ImageView>

    <TextView
        android:id="@+id/dlgFileItemFolderName"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/dlgFileItemIcon"
        android:layout_alignTop="@+id/dlgFileItemIcon"
        android:layout_toRightOf="@+id/dlgFileItemIcon"
        android:gravity="center_vertical"
        android:textSize="23sp" >
    </TextView>

</RelativeLayout>