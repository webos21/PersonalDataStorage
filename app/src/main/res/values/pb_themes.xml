<resources>

    <style name="ActionBarPopupThemeOverlayBase" parent="@style/ThemeOverlay.MaterialComponents.Light" />

    <style name="ActionBarPopupThemeOverlay" parent="@style/ActionBarPopupThemeOverlayBase">
        <item name="android:textColorPrimary">#ff00a9ce</item>
        <item name="android:textColorSecondary">#ff0090b0</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">#ffffffff</item>
    </style>

    <!-- Base application theme. -->
    <style name="PbTheme.Normal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorBackground">?colorSurface</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner</item>
        <item name="android:textColorLink">#ff0090b0</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="actionBarPopupTheme">@style/ActionBarPopupThemeOverlay</item>
        <item name="actionBarTheme">@style/ActionBarThemeOverlay</item>
        <item name="actionMenuTextColor">@color/actionBarMenuTextColor</item>
        <item name="actionModeBackground">@color/actionMode</item>
        <item name="alertDialogTheme">@style/PbTheme.DialogTheme</item>
        <item name="colorAccent">#ff0090b0</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">#ff0090b0</item>
        <item name="colorSecondary">#ff0090b0</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="PbTheme.DialogTheme" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarTheme">@style/ActionBarThemeOverlay</item>
        <item name="actionMenuTextColor">@color/actionBarMenuTextColor</item>
        <item name="actionModeBackground">@color/actionMode</item>
        <item name="colorAccent">@color/actionBarColorDark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorPrimary">@color/actionBarColorDark</item>
        <item name="colorSecondary">@color/actionBarColorDark</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>


    <!-- Splash Theme -->
    <style name="PbTheme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PbTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PbTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>