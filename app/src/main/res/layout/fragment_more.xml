<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.more.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 여기서부터 고쳐야 한다 -->

        <LinearLayout
            style="@style/PreferenceCategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/PreferenceCategoryTitle"
                android:text="Functionality" />

            <TextView
                android:id="@+id/pbm"
                style="@style/PreferenceCategory"
                android:drawableLeft="@drawable/ic_password_black_24"
                android:text="암호 관리" />


            <TextView
                android:id="@+id/to_map"
                style="@style/PreferenceCategory"
                android:drawableLeft="@drawable/ic_map_black_24"
                android:text="지도 보기" />
        </LinearLayout>

        <View style="@style/PreferenceCategoryDivider" />

        <LinearLayout
            style="@style/PreferenceCategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/PreferenceCategoryTitle"
                android:text="UI" />

            <TextView
                android:id="@+id/theme"
                style="@style/PreferenceCategory"
                android:drawableLeft="@drawable/ic_daynight_black_24"
                android:text="Theme" />
        </LinearLayout>

        <View style="@style/PreferenceCategoryDivider" />

        <LinearLayout
            style="@style/PreferenceCategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/PreferenceCategoryTitle"
                android:text="DB 관리" />

            <TextView
                android:id="@+id/db_import"
                style="@style/PreferenceCategory"
                android:drawableLeft="@drawable/ic_db_import_black_24"
                android:text="DB Import" />

            <TextView
                android:id="@+id/db_export"
                style="@style/PreferenceCategory"
                android:drawableLeft="@drawable/ic_db_export_black_24"
                android:text="DB Export" />
        </LinearLayout>

        <View style="@style/PreferenceCategoryDivider" />

        <LinearLayout
            style="@style/PreferenceCategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/PreferenceCategoryTitle"
                android:text="About" />

            <TextView
                android:id="@+id/about"
                style="@style/PreferenceCategory"
                android:drawableLeft="@drawable/ic_info_black_24"
                android:text="About" />


            <TextView
                android:id="@+id/test"
                style="@style/PreferenceCategory"
                android:drawableLeft="@drawable/ic_info_black_24"
                android:text="Test" />
        </LinearLayout>

        <View style="@style/PreferenceCategoryDivider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:tag="spaceForBottomMenu" />

    </LinearLayout>

</ScrollView>