<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.more.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/PreferenceCategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/PreferenceCategoryTitle"
                android:text="DB 관리" />

            <TextView
                android:id="@+id/db_import"
                style="@style/PreferenceCategory"
                android:drawableLeft="@drawable/ic_db_import_black_24"
                android:text="DB Import" />

            <TextView
                android:id="@+id/db_export"
                style="@style/PreferenceCategory"
                android:drawableLeft="@drawable/ic_db_export_black_24"
                android:text="DB Export" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>