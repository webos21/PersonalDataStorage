<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.NanoActivity">

    <TextView
        android:id="@+id/lbl_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Web Service"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        style="@style/PreferenceCategoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_info"
            style="@style/PreferenceCategory"
            android:layout_width="match_parent"
            android:text="스위치를 켜면 내장 웹서비스가 시작되고,\n끄면 바로 종료됩니다." />

    </LinearLayout>

    <LinearLayout
        style="@style/PreferenceCategoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ip_label"
            style="@style/PreferenceCategory"
            android:layout_width="wrap_content"
            android:text="접속 주소" />

        <TextView
            android:id="@+id/tv_ip_addr"
            style="@style/PreferenceCategory"
            android:layout_width="wrap_content"
            android:text="http://192.168.0.44:3000/"
            android:textColor="@android:color/holo_blue_dark" />

    </LinearLayout>

    <LinearLayout
        style="@style/PreferenceCategoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            style="@style/PreferenceCategory"
            android:layout_width="0dip"
            android:layout_weight="4"
            android:text="암호책 서비스" />

        <Switch
            android:id="@+id/sw_pb_web"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        style="@style/PreferenceCategoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            style="@style/PreferenceCategory"
            android:layout_width="0dip"
            android:layout_weight="4"
            android:text="내장폴더 서비스" />

        <Switch
            android:id="@+id/sw_dir_web"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        style="@style/PreferenceCategoryLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_log"
            style="@style/PreferenceCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="스위치를 켜면 내장 웹서비스가 시작됩니다.\n접속할 IP주소는 xx입니다." />

    </LinearLayout>

</LinearLayout>
