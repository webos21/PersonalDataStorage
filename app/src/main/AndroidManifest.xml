<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.webos21.pds.app">
    <!-- For Internet Access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- For Accessing to External Storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- For All File Access : after 2021-05 -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" /> <!-- For Accessing to Finger-Print -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" /> <!-- For Notification Player -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".PdsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/PbTheme.Normal"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/PbTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleInstance"
            android:theme="@style/PbTheme.Normal"></activity>
        <activity
            android:name=".AuthActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/PbTheme.Normal" />
        <activity
            android:name=".AuthConfigActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/PbTheme.Normal" />
        <activity
            android:name=".PbAddActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/PbTheme.Normal" />
        <activity
            android:name=".PbEditActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/PbTheme.Normal" />

        <service
            android:name=".PdsWebService"
            android:enabled="true"
            android:exported="true"
            android:label="PdsWebService">
            <intent-filter>
                <action android:name="com.gmail.webos21.pds.app.action.PLAY" />
                <action android:name="com.gmail.webos21.pds.app.action.CLOSE" />
            </intent-filter>
        </service>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="${crashlyticsCollectionEnabled}" />
    </application>

</manifest>